{
  "manifest_version": 3,
  "name": "Scam Detector",
  "version": "1.0",
  "description": "Check if a message is a scam.",
  "permissions": ["storage", "activeTab"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "background": {
    "service_worker": "background.js"
  }
}
